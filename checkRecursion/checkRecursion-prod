public with sharing class checkRecursion {
    public static Boolean enquiryTriggerFired = false;
    public static Boolean leadTriggerFired = false;
    public static Boolean opportunityTriggerFired = false;
    public static Boolean siteVisitTriggerFired = false;
    public static Boolean bookTriggerFired = false;
    
    //By Pass Enquiry Details While updating 
    public static Boolean bypassEnquiryTrigger = false;
  
  private static boolean firstRun = true;
   private static boolean firstRunTask = true;
   private static boolean firstRunA = true;
  public static boolean isFirstRun() {
    if(firstRun) {
      firstRun = false;
      return true;
    } else {
      return false;
    }   
  }
    private static boolean firstRuntd = true;
  public static boolean isFirstRunTranferDemand() {
    if(firstRuntd) {
      firstRuntd = false;
      return true;
    } else {
      return false;
    }   
  }
    
  public static void resetFirstRun() {
    firstRun = true;
  }
  
  public static boolean isFirstRunTask() {
    if(firstRunTask) {
      firstRunTask = false;
      return true;
    } else {
      return firstRunTask;
    }    
  }
  
  public static void resetFirstRunTask() {
    firstRunTask = true;
  }
  
  public static boolean isFirstRunA() {
    if(firstRunA) {
      firstRunA = false;
      return true;
    } else {
      return firstRunA;
    }    
  }
  
  public static void resetFirstRunA() {
    firstRunA = true;
  }
}
